<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3C6A9"
    tools:context=".MainActivity"
    tools:ignore="missingConstraints" >

    <TextView
        android:id="@+id/registrujse2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Региструј се"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="#E85265"
        android:fontFamily="sans-serif-black"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"/>

    <ImageView
        android:id="@+id/slika3"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:src="@drawable/kolacic"
        android:scaleType="fitCenter"
        android:layout_below="@id/registrujse2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"/>

    <EditText
        android:id="@+id/mejl"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:background="@drawable/border_shape"
        android:hint="Мејл адреса"
        android:textColorHint="#FFEA6879"
        android:textColor="#E85265"
        android:layout_below="@id/slika3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:inputType="textEmailAddress"/>
    <EditText
        android:id="@+id/korisnickoime2"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:background="@drawable/border_shape"
        android:hint="Корисничко име"
        android:textColorHint="#FFEA6879"
        android:textColor="#E85265"
        android:layout_below="@id/slika3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:inputType="text"/>

    <EditText
        android:id="@+id/sifra2"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:background="@drawable/border_shape"
        android:hint="Шифра"
        android:textColor="#E85265"
        android:textColorHint="#EA6879"
        android:layout_below="@id/slika3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="170dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:inputType="textPassword"/>

<!--    <EditText
        android:id="@+id/ponovisifru"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:background="@drawable/border_shape"
        android:hint="Поновите шифру"
        android:textColor="#E85265"
        android:textColorHint="#EA6879"
        android:layout_below="@id/slika3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="240dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:inputType="textPassword"/> -->

    <Button
        android:id="@+id/registrujse3"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:background="@drawable/round_btn"
        android:text="Региструј се"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="620dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:radius="30dp"
        android:stateListAnimator="@null"
        android:elevation="8dp"/>

    <TextView
        android:id="@+id/vecimatenalog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Већ имате налог? "
        android:textColor="#000000"
        android:layout_below="@id/registrujse3"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="80dp"/>

    <TextView
        android:id="@+id/ulogujse3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Улогујте се"
        android:textColor="#E85265"
        android:layout_below="@id/registrujse3"
        android:layout_toEndOf="@id/vecimatenalog"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"/>
    />




</RelativeLayout>
