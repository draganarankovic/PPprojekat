<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    android:background="#F3C6A9" >

    <TextView
        android:id="@+id/BakaVisnja"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="44sp"
        android:textStyle="bold"
        android:textColor="#E85265"
        android:fontFamily="sans-serif-black"
        android:text="Бака Вишња"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"/>

    <ImageView
        android:id="@+id/slika1"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/kolacic"
        android:scaleType="fitCenter"
        android:layout_below="@id/BakaVisnja"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/ulogujse1"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:background="@drawable/round_btn"
        android:text="Улогуј се"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_below="@id/slika1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:radius="30dp"
        android:stateListAnimator="@null"
        android:elevation="8dp"/>

    <Button
        android:id="@+id/novinalog1"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_below="@id/ulogujse1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/round_btn"
        android:radius="30dp"
        android:text="Нови налог"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        android:stateListAnimator="@null"
        android:elevation="8dp"/>

</RelativeLayout>
