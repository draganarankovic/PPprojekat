<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3C6A9"
    android:id="@+id/main"
    tools:context=".WelcomeActivity">

    <TextView
        android:id="@+id/dobrodosli"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Поручи храну!"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="#E85265"
        android:fontFamily="sans-serif-black"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"/>

    <ImageView
        android:id="@+id/slika2"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/kolacic"
        android:scaleType="fitCenter"
        android:layout_below="@id/dobrodosli"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/volt"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:background="@drawable/round_btn"
        android:text="Волт"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="400dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:radius="30dp"
        android:stateListAnimator="@null"
        android:elevation="8dp"

        />

    <Button
        android:id="@+id/glovo"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:background="@drawable/round_btn"
        android:text="Глово"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="490dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:radius="30dp"
        android:stateListAnimator="@null"
        android:elevation="8dp"

        />




    <Button
        android:id="@+id/kiflice"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:background="@drawable/round_btn"
        android:text="Бака Вишњине кифлице"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="580dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:radius="30dp"
        android:stateListAnimator="@null"
        android:elevation="8dp"

        />


</RelativeLayout>